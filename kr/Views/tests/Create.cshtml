@model kr.Models.test

@{
    ViewBag.Title = "Создание эксперимента";
}

<h2>Создание эксперимента</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           @Html.Label("Статус эксперимента", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.DropDownList("status_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.status_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Название", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Описание эксперимента", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Дата окончания эксперимента", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.end_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Количество прохождений", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.EditorFor(model => model.end_count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.end_count, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Количество прохождений для одного человека", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-40">
                @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-40">
                <input type="submit" value="Сохранить данные" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Перейти к списку экспериментов", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
