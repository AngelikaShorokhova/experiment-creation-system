@model kr.Models.test_insAnswer

@{
    ViewBag.Title = "Результаты эксперимента";
}

<h2>Результаты эксперимента</h2>
<div>
    <style>
        dt {
            text-align: left;
        }
    </style>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Фамилия")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.child.surname)
        </dd>

        <dt>
            @Html.DisplayName("Имя")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.child.name)
        </dd>

        <dt>
            @Html.DisplayName("Отчество")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.child.patronymic_name)
        </dd>

        <dt>
            @Html.DisplayName("Эксперимент")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.test.name)
        </dd>

        <dt>
            @Html.DisplayName("Начало тестирования")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.start_time)
        </dd>

        <dt>
            @Html.DisplayName("Окончание тестирования")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.end_time)
        </dd>

        <dt>
            @Html.DisplayName("Результат тестирования тестирования")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.test_Instance.result)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("ExportPersonalInfoPDF", "Test_Instance", new { id = Model.test_Instance.id })">Выгрузить информацию о прохождении тестирования</a>
</p>

<div>
    <table class="table" width="50%">
        <tr>
            <th>
                @Html.DisplayName("Вопрос")
            </th>
            <th>
                @Html.DisplayName("Изображение")
            </th>
        </tr>

        @foreach (var item in Model.answers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.question.name)
                </td>
                <td>
                    <img src=@item.image.link height="50">
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Вернуть к списку результатов", "Index")
</p>
