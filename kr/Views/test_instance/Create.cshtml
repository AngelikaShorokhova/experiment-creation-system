@model kr.Models.test_instance

@{
    ViewBag.Title = "Начать тестирование";
}

<h2>Начать тестирование</h2>

<style>
    .form-horizontal{
        text-align:center
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="align-content:center">
            @Html.Label("Название", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-20">
                @Html.DropDownList("test_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.test_id, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div style="align-content:center">
                <input type="submit" value="Начать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку тестов", "Index", "Tests")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
